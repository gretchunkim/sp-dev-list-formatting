{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
  "hideColumnHeader": "true",
  "hideSelection": true,
  "height": "160",
  "width": "190",
  "formatter": {
    "elmType": "div",
    "attributes": {
      "class": "ms-bgColor-themeLighterAlt ms-bgColor-themePrimary--hover"
    },
    "style": {
      "display": "flex",
      "flex-wrap": "wrap",
      "min-width": "180px",
      "min-height": "150px",
      "margin-right": "10px",
      "margin-top": "10px",
      "box-shadow": "2px 2px 4px darkgrey"
    },
    "children": [
      {
        "elmType": "a",
        "attributes": {
          "href": "[$URL]",
          "target": "=if([$NewTab] == true, '_blank', '')",
          "class": " ms-fontColor-themePrimary ms-fontColor-white--hover"
        },
        "style": {
          "width": "100%",
          "text-decoration": "none"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "display": "flex",
              "flex-wrap": "wrap",
              "width": "100%",
              "min-height": "150px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "text-align": "center",
                  "margin": "auto"
                },
                "children": [
                  {
                    "elmType": "div",
                    "attributes": {
                      "class": "sp-row-title"
                    },
                    "txtContent": "[$Title]"
                  },
                  {
                    "elmType": "div",
                    "attributes": {
                      "iconName": "[$Icon]",
                      "class": "ms-fontSize-su"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}